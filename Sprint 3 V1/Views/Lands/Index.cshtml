@model IEnumerable<Sprint_3_V1.Models.Land>

@{
    ViewBag.Title = "Index";
}
<link href='@Url.Content("~/Content/Style.css")' rel="stylesheet" type="text/css" />
<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Farm.FarmName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.NumFields)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Size)
        </th>
        <th>
