@model IEnumerable<Sprint_3_V1.Models.StockOrder>

@{
    ViewBag.Title = "Cart";
}
<link href='@Url.Content("~/Content/Style.css")' rel="stylesheet" type="text/css" />
<h2>Index</h2>

<p class="text-danger" style="font-size:larger;">
    @ViewBag.empty 
    @ViewBag.cartempty
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Stock.CropInfo.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Quantity)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.SubPrice)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Stock.CropInfo.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Quantity)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SubPrice)
            </td>
            <td>
                <button class="btn btn-info btn-sm" style="text-align:center;font-family:Arial" type="button" value="Details" onclick="location.href='@Url.Action("RemoveFromCart", "Customers", new { id = item.SOID })'">Remove 1</button>
                |
                <button class="btn btn-info btn-sm" style="text-align:center;font-family:Arial" type="button" value="Details" onclick="location.href='@Url.Action("RemoveAll", "Customers", new { id = item.SOID })'">Remove All</button>

                @*@Html.ActionLink("Remove All", "RemoveAll", new { id = item.SOID })*@
                <br />
            </td>
        </tr>
        
    }
    <tr style="padding-top:5px;">
        <td colspan="2">
            <br />
            <button class="btn btn-danger btn-lg" style="text-align:center;font-family:Arial" type="button" value="Details" onclick="location.href='@Url.Action("ClearCart", "Customers")'">Remove All</button>
        </td>
        <td colspan="2">
            <br />
            <button class="btn btn-success btn-lg" style="text-align:center;font-family:Arial" type="button" value="Details" onclick="location.href='@Url.Action("CheckOut", "Orders")'">Check out</button>
        </td>
    </tr>
</table>
